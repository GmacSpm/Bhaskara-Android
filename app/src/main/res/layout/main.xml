<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_gravity="top|center_vertical|center_horizontal|center"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#000000">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#000000">

		<LinearLayout
			android:gravity="top|center_vertical|center_horizontal|center"
			android:orientation="vertical"
			android:id="@+id/mainLinearLayout1"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<LinearLayout
				android:gravity="center"
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="3dp"
				android:layout_marginTop="5dp">

				<EditText
					android:textStyle="bold"
					
					android:textColorHint="#ffffff"
					android:id="@+id/a"
					android:background="@drawable/text_f"
					android:padding="10dp"
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:hint="Termo A"
					android:ems="10"
					android:inputType="numberSigned"/>

				<EditText
					android:textStyle="bold"
					android:textColorHint="#ffffff"
					android:id="@+id/b"
					android:background="@drawable/text_f"
					android:padding="10dp"
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:hint="Termo B"
					android:ems="10"
					android:inputType="numberSigned"/>

				<EditText
					android:textStyle="bold"
					
					android:textColorHint="#ffffff"
					android:id="@+id/c"
					android:background="@drawable/text_f"
					android:padding="10dp"
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:hint="Termo C"
					android:ems="10"
					android:inputType="numberSigned"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<Button
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:id="@+id/calcular"
					android:background="@drawable/delta"
					android:padding="10dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:text="@string/botao"
					android:onClick="calculoDelta"/>

				<Button
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:background="@drawable/delta"
					android:padding="10dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:text="Limpar"
					android:onClick="limpa"/>

			</LinearLayout>

			<TextView
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textStyle="bold"
				
				android:id="@+id/saida"
				android:background="@drawable/delta"
				android:padding="8dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"/>

			<LinearLayout
				android:gravity="top|center_vertical|center_horizontal|center"
				android:orientation="vertical"
				android:background="@drawable/delta"
				android:padding="7dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="6dp">

				<TextView
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:textStyle="bold"
					
					android:id="@+id/numerador"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

				<View
					android:background="#ffffff"
					android:layout_width="120dp"
					android:layout_height="2dp"/>

				<TextView
					
					android:textStyle="bold"
					
					android:id="@+id/denominador"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

			</LinearLayout>

			<LinearLayout
				android:gravity="top|center_vertical|center_horizontal|center"
				android:orientation="vertical"
				android:background="@drawable/delta"
				android:padding="7dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:layout_marginTop="0dp">

				<TextView
					
					android:textStyle="bold"
					
					android:id="@+id/numerador_dois"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

				<View
					android:background="#ffffff"
					android:layout_width="120dp"
					android:layout_height="2dp"/>

				<TextView
					
					android:textStyle="bold"
					
					android:id="@+id/denominador_dois"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

			</LinearLayout>

			<LinearLayout
				android:gravity="top|center_vertical|center_horizontal|center"
				android:orientation="vertical"
				android:background="@drawable/delta"
				android:padding="7dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="0dp">

				<TextView
					
					android:textStyle="bold"
					
					android:id="@+id/numerador_tres"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"/>

				<View
					android:background="#ffffff"
					android:layout_width="120dp"
					android:layout_height="2dp"/>

				<TextView
					android:textAppearance="?android:attr/textAppearanceSmall"
					
					android:textStyle="bold"
					
					android:id="@+id/denominador_tres"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

				<TextView
					
					android:textStyle="bold"
					
					android:id="@+id/numerador_tres_tres"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"/>

				<View
					android:background="#ffffff"
					android:layout_width="110dp"
					android:layout_height="2dp"/>

				<TextView
					
					android:textStyle="bold"
					
					android:id="@+id/denominador_tres_tres"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

				<TextView
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:textStyle="bold"
					
					android:id="@+id/resultado_x1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:layout_marginBottom="0dp"/>

			</LinearLayout>

			<LinearLayout
				android:gravity="top|center_vertical|center_horizontal|center"
				android:orientation="vertical"
				android:background="@drawable/delta"
				android:padding="7dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp">

				<TextView
					
					android:textStyle="bold"
					
					android:id="@+id/numerador_quatro"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"/>

				<View
					android:background="#ffffff"
					android:layout_width="120dp"
					android:layout_height="2dp"/>

				<TextView
					
					android:textStyle="bold"
					
					android:id="@+id/denominador_quatro"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

				<TextView
					android:textStyle="bold"
					
					android:id="@+id/numerador_quatro_quatro"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"/>

				<View
					android:background="#ffffff"
					android:layout_width="110dp"
					android:layout_height="2dp"/>

				<TextView
					
					android:textStyle="bold"
					
					android:id="@+id/denominador_quatro_quatro"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

				<TextView
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:textStyle="bold"
					
					android:id="@+id/resultado_x2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"/>

			</LinearLayout>

		</LinearLayout>

	</RelativeLayout>

</ScrollView>

